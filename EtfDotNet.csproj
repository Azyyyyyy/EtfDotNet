<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        
        <PackageId>EpicPix.EtfDotNet</PackageId>
        <Version>1.0.0</Version>
        <Authors>EpicPix</Authors>
        <PackageTags>etf</PackageTags>
        <Description>
            This package adds support for Erlang External Term Format
        </Description>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/EpicPix/EtfDotNet/</RepositoryUrl>
    </PropertyGroup>

    <ItemGroup>
      <Compile Remove="EtfDotNet.Tests\**" />
      <Compile Remove="EtfDotNet.Benchmarks\**" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Remove="EtfDotNet.Tests\**" />
      <EmbeddedResource Remove="EtfDotNet.Benchmarks\**" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="EtfDotNet.Tests\**" />
      <None Remove="EtfDotNet.Benchmarks\**" />
    </ItemGroup>

</Project>
